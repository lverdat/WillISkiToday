<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @hill.name %>
</p>

<p>
  <b>Snow cover bottom:</b>
  <%= @hill.snow_cover_bottom %>
</p>

<p>
  <b>Snow cover top:</b>
  <%= @hill.snow_cover_top %>
</p>

<p>
  <b>Lifts open:</b>
  <%= @hill.lifts_open %>
</p>

<p>
  <b>Lifts total:</b>
  <%= @hill.lifts_total %>
</p>

<h2>Add a new run</h2>
<%= form_for([@hill, @hill.runs.build]) do |f| %>
  <div class="field">
    <%= f.label :run_type %><br />
	<%= collection_select(:run, :run_type_id,RunType.all,:id,:label)%>
  </div>
  <div class="field">
    <%= f.label :total %><br />
    <%= f.number_field :total %>
  </div>
  <div class="field">
    <%= f.label :open %><br />
    <%= f.number_field :open %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_hill_path(@hill) %> |
<%= link_to 'Back', hills_path %>
